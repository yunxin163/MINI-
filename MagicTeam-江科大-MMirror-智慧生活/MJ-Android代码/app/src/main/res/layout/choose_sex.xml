<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <Button
        android:id="@+id/sex_boy"
        android:text="男"
        android:textSize="14sp"
        android:textColor="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/choose_sex_top_selector"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#9e9e9e"
        />

    <Button
        android:id="@+id/sex_girl"
        android:text="女"
        android:textSize="14sp"
        android:textColor="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/choose_sex_bottom_selector"
        app:layout_constraintTop_toBottomOf="@+id/sex_boy"/>

    <Button
        android:id="@+id/sex_cancel"
        android:text="取消"
        android:textSize="14sp"
        android:textColor="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#ffffff"
        app:layout_constraintTop_toBottomOf="@+id/sex_girl"/>

</android.support.constraint.ConstraintLayout>